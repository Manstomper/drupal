{
  "name": "rig/drupal-demo",
  "description": "A demo Drupal 9 project",
  "type": "project",
  "version": "1.0.0",
  "license": "CC-PDDC",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "require": {
    "php": "~8.1.12",
    "composer/installers": "^1.9",
    "drupal/core-composer-scaffold": "^9.4",
    "drupal/recommended-project": "^9.4.8",
    "drush/drush": "^11.3.2",
    "drupal/search_api": "^1.28",
    "drupal/elasticsearch_connector": "^7",
    "drupal/devel": "^5"
  },
  "require-dev": {},
  "config": {
    "vendor-dir": "vendor",
    "allow-plugins": {
      "composer/installers": true,
      "drupal/core-project-message": true,
      "drupal/core-composer-scaffold": true
    },
    "process-timeout": 600
  },
  "extra": {
    "drupal-scaffold": {
      "locations": {
        "web-root": "public"
      },
      "file-mapping": {
        "[web-root]/sites/development.services.yml": false
      }
    },
    "installer-paths": {
      "public/core": [
        "type:drupal-core"
      ],
      "public/libraries/{$name}": [
        "type:drupal-library"
      ],
      "public/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "public/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "public/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "drush/Commands/contrib/{$name}": [
        "type:drupal-drush"
      ]
    }
  },
  "scripts": {
    "cleanup": [
      "rm ./.editorconfig",
      "rm ./public/.csslintrc",
      "rm ./public/.eslintignore",
      "rm ./public/.eslintrc.json",
      "rm ./public/.ht.router.php",
      "rm ./public/.htaccess",
      "rm ./public/example.gitignore",
      "rm ./public/INSTALL.txt"
    ],
    "post-install-cmd": [
      "ln -sfn /app-mount/vendor/bin/drush /bin/drush",
      "@cleanup"
    ],
    "post-update-cmd": [
      "@cleanup"
    ]
  }
}
